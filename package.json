{
  "name": "orbitcoin-app",
  "version": "0.0.3",
  "description": "Frontend for Orbitcoin App",
  "scripts": {
    "pull": "git pull && npm install",
    "deploy": "truffle deploy",
    "lint": "eslint ./",
    "build": "webpack",
    "dev": "webpack-dev-server --host 0.0.0.0",
    "nuxt:dev": "nodemon server.js",
    "nuxt:build": "cross-env NODE_ENV=production nuxt build --config-file ./nuxt.config.js",
    "nuxt:start": "cross-env HOST=127.0.0.1 PORT=3003 NODE_ENV=production node server.js",
    "nuxt:deploy": "npm run pull && npm run nuxt:build && pm2 restart orbitcoin"
  },
  "author": "Konstantin Vlasov",
  "license": "MIT",
